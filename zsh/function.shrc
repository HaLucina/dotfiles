pss () {
    if [[ -z "$1" ]]; then
        echo "Usage: pss <pattern>"
        return 1
    fi
    ps aux | grep -E "PID|$1" | grep -v grep
}

gre () {
    if [[ -z "$1" || -z "$2" ]]; then
        echo "Usage: gre <pattern> <directory>"
        return 1
    fi
    grep -E "$1" -rl "$2"
}

vz () {
  local dir="$HOME/dotfiles/zsh"
  local file
  file=$(ls "$dir"/* "$dir"/.zshrc 2>/dev/null | fzf --prompt="Select zshrc part: " --height=40%) || return
  nvim "$file"
}
